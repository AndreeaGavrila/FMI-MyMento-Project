<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="to_teach_course_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="course_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/mymentologo</item>
    </style>

    <style name="left_text">

        <item name ="android:layout_width"> wrap_content </item>
        <item name ="android:layout_height"> wrap_content </item>
        <item name ="android:layout_alignParentLeft"> true </item>
        <item name ="android:textColor"> #f2f2f2 </item>
        <item name ="android:padding">10dp </item>

    </style>

    <style name = "button_right">
        <item name ="android:layout_width"> wrap_content </item>
        <item name ="android:layout_height"> wrap_content </item>
        <item name ="android:layout_alignParentRight"> true </item>
        <item name ="android:textColor"> #f2f2f2 </item>
        <item name ="android:padding">10dp </item>
        <item name ="android:text">ACCEPT REQUEST </item>
    </style>

    <style name = "layout_horizontal">
        <item name ="android:layout_width"> match_parent </item>
        <item name ="android:layout_height"> match_parent </item>
        <item name="android:orientation">horizontal</item>
        <item name="android:colorBackground">#19376A</item>
        <item name ="android:padding">10dp </item>

    </style>



</resources>